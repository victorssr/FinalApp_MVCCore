@model ErrorViewModel
@{
    ViewData["Title"] = "Algo ocorreu!";
}

@if (Model == null)
{
    <h3 class="text-danger">Ops! Ocorreu um problema</h3>
    <h4>Desculpe-nos o transtorno. Estamos trabalhando para corrigir o problema.</h4>
}
else
{
    <h3 class="text-danger">@Model.Titulo</h3>
    <h4>@Model.Descricao</h4>
}