@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px;"></div>

    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        <h5 id="msgRetorno" class="pt-2">Opa! Algo deu errado</h5>
        <div class="pt-2 text-danger" asp-validation-summary="ModelOnly"></div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div style="padding-top: 15px;"></div>

    <div id="msg_box_success" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert"></button>
        <h3 id="msgRetorno" class="pt-2">@ViewBag.Sucesso</h3>
    </div>
}

@if (TempData["Sucesso"] != null)
{
    <div style="padding-top: 15px;"></div>

    <div id="msg_box_success" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert"></button>
        <h3 id="msgRetorno" class="pt-2">@TempData["Sucesso"]</h3>
    </div>
}