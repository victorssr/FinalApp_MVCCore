@model VSDev.MVC.ViewModels.ProfessorViewModel

<h3>Cadastro de Professor</h3>
<hr />
<vc:Summary></vc:Summary>
<div class="row">
    <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <div class="form-check">
                    <input type="radio" value="0" asp-for="Genero" id="genero-feminino" checked="@(Model.Genero == 0)" />
                    <label class="form-check-label" for="genero-feminino">Feminino</label>
                    <input type="radio" value="1" asp-for="Genero" id="genero-masculino" checked="@(Model.Genero == 1)" />
                    <label class="form-check-label" for="genero-masculino">Masculino</label>
                    <br />
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-info" asp-action="Index">Voltar</a>
                <input type="submit" value="Atualizar Professor" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        jQuery(function ($) {
            $("#Celular").mask("(99)99999-9999");
        })
    </script>
}
