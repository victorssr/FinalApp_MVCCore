@model VSDev.MVC.ViewModels.ProfessorViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir Professor</h2>
<h4>Deseja realmente excluir o professor(a) @Model.Nome?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Celular)
        </dt>
        <dd class="col-sm-12">
            @((string.IsNullOrEmpty(Model.Celular)) ?  Html.Raw("Não informado") : Html.DisplayFor(model => model.Celular))
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-info" asp-action="Index">
            <i class="fa fa-arrow-left mr-2"></i>Voltar
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash mr-2"></i>Confirmar exclusão
        </button>
    </form>
</div>
<div class="col-12">
    <hr />
    <h4 class="mb-3">Endereço</h4>
    <partial name="_DetalhesEndereco" />
</div>